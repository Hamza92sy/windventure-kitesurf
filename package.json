{
  "name": "windventure",
  "version": "1.0.0",
  "description": "Windventure - Kitesurf & Windsurf Adventures in Dakhla",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:auto": "node scripts/deployment-automation.js",
    "deploy:test": "node scripts/deployment-test.js",
    "postinstall": "npm run build",
    "auto-commit": "./src/scripts/auto-commit.sh",
    "auto-deploy": "./src/scripts/auto-deploy.sh",
    "watch-changes": "./src/scripts/watch-changes.sh",
    "verify": "./src/scripts/verify-deployment.sh",
    "verify-deployment": "./src/scripts/verify-deployment.sh",
    "backup": "./src/scripts/backup.sh",
    "clear-cache": "./src/scripts/clear-build-cache.sh",
    "generate-sitemap": "./src/scripts/generate-sitemap.sh",
    "watch-all": "./src/scripts/watch-all.sh",
    "watch-claude": "./watch-claude.sh",
    "watch-cursor": "./scripts/file-watcher.sh",
    "test:css": "playwright test css-monitoring",
    "test:css:ui": "playwright test css-monitoring --ui",
    "test:css:headed": "playwright test css-monitoring --headed",
    "test:css:validation": "playwright test tests/css-validation.spec.ts",
    "test:css:monitor": "playwright test tests/css-monitoring.spec.ts",
    "test:css:ci": "playwright test tests/css-monitoring-ci.spec.ts",
    "css:monitor": "npm run test:css && npm run lighthouse:css",
    "css:monitor:full": "./scripts/css-monitor.sh",
    "lighthouse:css": "lighthouse https://windventure.fr --only-categories=performance --chrome-flags='--headless'",
    "test:visual": "playwright test visual-regression",
    "test:all": "playwright test",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:smoke": "playwright test --grep @smoke",
    "debug:auto": "node scripts/debug-automation.js",
    "debug:visual": "node scripts/visual-analysis.js",
    "debug:now": "node debug-windventure-now.js",
    "auto-fix:visual": "node scripts/auto-fix-visual.js",
    "test:visual:update": "playwright test visual-regression --update-snapshots",
    "perf:validate": "node scripts/validate-performance.js",
    "ci:local": "npm run lint && npm run type-check && npm run test:unit && npm run build",
    "ci:visual": "npm run debug:visual && npm run test:visual",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "auto-fix:eslint": "node scripts/auto-fix-eslint.js",
    "pre-commit": "npm run lint:fix && npm run test:unit",
    "ci:lint": "npm run lint -- --max-warnings 0"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.0",
    "@notionhq/client": "^4.0.1",
    "@sentry/nextjs": "^10.3.0",
    "@stripe/stripe-js": "^2.0.0",
    "@supabase/supabase-js": "^2.0.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.0",
    "date-fns": "^2.30.0",
    "framer-motion": "^10.16.0",
    "lucide-react": "^0.292.0",
    "next": "^14.0.0",
    "node-fetch": "^3.3.2",
    "postcss": "^8.4.0",
    "react": "^18.0.0",
    "react-datepicker": "^4.21.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.47.0",
    "react-swipeable": "^7.0.2",
    "resend": "^6.0.1",
    "stripe": "^14.0.0",
    "tailwindcss": "^3.3.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@sentry/cli": "^2.52.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-datepicker": "^4.19.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/ui": "^3.2.4",
    "codecov": "^3.8.2",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "lighthouse": "^11.0.0",
    "next-bundle-analyzer": "^0.6.8",
    "playwright": "^1.54.2",
    "puppeteer": "^24.16.2",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/windventure.git"
  },
  "keywords": [
    "kitesurf",
    "windsurf",
    "dakhla",
    "morocco",
    "adventure",
    "booking"
  ],
  "author": "Windventure Team",
  "license": "MIT"
}
